rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 모든 컬렉션에 대한 읽기/쓰기 허용 (개발 단계)
    // 프로덕션 환경에서는 인증된 사용자만 접근하도록 수정 필요
    match /{document=**} {
      allow read, write: if true;
    }
    
    // 예시: 인증된 사용자만 접근하도록 설정하려면 아래 주석을 해제하고 위의 규칙을 주석 처리
    // match /{document=**} {
    //   allow read, write: if request.auth != null;
    // }
  }
}

